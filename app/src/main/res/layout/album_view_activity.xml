<?xml version="1.0" encoding="utf-8"?>
<io.mokshjn.cosmo.widgets.ElasticDragDismissFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/draggable_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionGroup="false"
    app:dragDismissDistance="@dimen/drag_dismiss_distance"
    app:dragDismissScale="0.95"
    tools:context=".activities.AlbumViewActivity">

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light"
        android:transitionName="@string/transition_album_bg" />

    <io.mokshjn.cosmo.widgets.ParallaxScrimageView
        android:id="@+id/shot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:foreground="?android:attr/selectableItemBackground"
        android:minHeight="@dimen/shot_collapsed_app_bar_height"
        android:stateListAnimator="@animator/app_bar_pin"
        android:transitionName="@string/transition_album_art"
        app:maxScrimAlpha="0.4"
        app:parallaxFactor="-0.5"
        app:scrimAlpha="0"
        app:scrimColor="@color/scrim" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dribbble_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_normal"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

</io.mokshjn.cosmo.widgets.ElasticDragDismissFrameLayout>